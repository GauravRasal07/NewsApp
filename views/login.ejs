<%- include("partials/header") %>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-xs-12 col-md-4">
                <form action="/login" method="POST" class="form verify-form">
                    <h3>Log in to your account</h3>
                    <p>Don't have account? <span><a href="/register"> Register</a></span></p>
                    <br>
                    <div class="google">
                        <a href="/auth/google">
                            <span><img src="./images/google1.png" alt="google"> Login using Google</span>
                        </a>
                    </div>
                    <br><hr style="width: 80%;">
                    <div class="form-group">
                        <label for="username">Email</label>
                        <input type="text" name="username" class="form-control inp" id="username" required>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password </label>
                        <input type="password" name="password" class="form-control inp" id="pwd" required>
                    </div>
                    <button type="submit" class="btn btn-secondary">Log in</button>
                    <div><br>
                    <div style="text-align: center;">
                        <a href="/forgot-password">forgot password</a></div>
                    </div>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</section>

<div class="navbar">
    <div class="container">
        <a href="/"><i class="fas fa-home"></i> Home</a>
        <% if(currentUser){ %>
            <a href="" class="right">Account <i class="fas fa-user-circle"></i></a>
        <% } %>
    </div>
</div>

<%- include("partials/footer") %>